# git functions
# Initial git config setup
function git_setup() {(
    git config --global user.name "Ashwin R C"
    git config --global user.email "ashwin2001achu@gmail.com"
    git_aliases
)}

# Set git aliases
function git_aliases() {(
    git config --global alias.aa 'add --all'
    git config --global alias.cp 'cherry-pick'
    git config --global alias.cpa 'cherry-pick --abort'
    git config --global alias.dh 'diff HEAD'
    git config --global alias.dhc 'reset --hard HEAD^'
    git config --global alias.lo 'log --oneline'
    git config --global alias.ma 'merge --abort'    
    git config --global alias.rh 'reset --hard'
    git config --global alias.rhh 'reset --hard HEAD'
)}
